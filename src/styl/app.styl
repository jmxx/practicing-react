@import "./base.styl"

@import "components/Section"

.hi
  color #fff
  font-size 2em
  font-weight 100
  left 50%
  position absolute
  top 50%
  text-align center
  transform translate(-50%, -50%)
  input
    background none
    border none
    border-bottom 1px solid #fff
    color #fff
    font-size 16px
    outline none
    padding 10px 0
    text-align center
    width 100%
  button
    background transparent
    border 1px solid #fff
    color #fff
    cursor pointer
    font-size 1em
    margin 0 10px
    padding 10px 15px